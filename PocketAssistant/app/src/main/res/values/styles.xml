<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashMainTextStyle">
        <item name="fontFamily">@font/font</item>
        <item name="android:textSize">32sp</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="StandardTextStyle">
        <item name="fontFamily">@font/font</item>
        <item name="android:textSize">24sp</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="CallButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/font</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="ChatBox" parent="Widget.MaterialComponents.Button">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="shapeAppearance">@style/ChatBoxCorner</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatBoxCorner">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">6dp</item>
    </style>

</resources>